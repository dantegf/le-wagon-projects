<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.text_area :content, placeholder: 'Write a review', style: "width: 100%; min-height: 300px" %>
  <%= f.input :rating, as: :integer, style: "width: 50px", inline_label: 'Rating', error: 'Please rate the restaurant 1-5' %>
  <%= f.button :submit, class: "btn-main" %>
<% end %>
